@model ShoppingCart.Application.ViewModels.CommentViewModel
@{
    ViewData["Title"] = "Add Comment";
}
<h1>Add Comment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComment">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" cols="3">Comment</textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <input asp-for="Submission.Id" style="visibility:hidden" value="@ViewBag.SubmissionId" />

            <div class="form-group">
                <input type="submit" value="AddComment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
